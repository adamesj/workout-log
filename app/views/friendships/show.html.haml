.col-md-8
  %p#notice= notice
  %h1 #{@friend.full_name}'s Exercises
  %table.table.table-striped
    %thead
      %tr
        %th Duration of workout
        %th Workout details
        %th Activity date
    %tbody
      - @exercises.each do |exercise|
        %tr
          %td= exercise.duration
          %td= truncate(exercise.workout_details, length: 100)
          %td= exercise.activity_date
  %br/

  = content_tag :div, "", id: "chart", data: {workouts: @exercises}

  %br/

  = link_to 'Back', user_exercises_path(current_user), class: 'btn btn-success btn-lg link'

