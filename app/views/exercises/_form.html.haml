= form_for [current_user, @exercise], html: {class: "form-horizontal", role: "form"} do |f|

  -if @exercise.errors.any?
    #error_explanation
      %h2
        = pluralize(@exercise.errors.count, "error")
        prohibited this exercise from being saved:
      %ul
      - @exercise.errors.full_messages.each do |msg|
        %li
          = msg

  = f.label :duration
  = f.number_field :duration, class: "form-control"
  %br/
  = f.label :workout_details
  = f.text_area :workout_details, class: "form-control"
  %br/
  = f.label :activity_date
  = f.text_field :activity_date, placeholder: 'yyyy/mm/dd', class: "form-control datepicker"
  %br/
  = f.submit class: "btn btn-default"
  = link_to 'Back', user_exercises_path(current_user), class: "btn btn-default link", id: "new_exercise_btn"